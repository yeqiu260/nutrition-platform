# 应用配置
APP_NAME=智能营养建议平台
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=change-me-in-production

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:123456@localhost:5432/nutrition_db

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# Celery 配置
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT 配置
JWT_SECRET_KEY=jwt-secret-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# OTP 配置
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=5

# S3/R2 配置
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=nutrition-reports
S3_REGION=auto

# xAI Grok API 配置
GROK_API_KEY=

# Shopify 配置
SHOPIFY_STORE_URL=
SHOPIFY_ACCESS_TOKEN=

# SMTP 邮件配置（用于发送验证码）
# Gmail 示例：需要开启"应用专用密码"
# 详细配置说明见 GMAIL_SMTP_SETUP.md
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=WysikHealth
